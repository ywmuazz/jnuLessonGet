{
	"name": "Hello Extensions",
	"description": "Hello world Extension",
	"version": "1.0",
	"manifest_version": 2,
	"browser_action": {
		"default_popup": "hello.html",
		"default_icon": "hello.png"
	},
	"commands": {
		"_execute_browser_action": {
			"suggested_key": {
				"default": "Ctrl+Shift+F",
				"mac": "MacCtrl+Shift+F"
			},
			"description": "Opens hello.html"
		}
	}
}